root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{kt,kts}]
disabled_rules=no-wildcard-imports

[*.{yml,yaml}]
indent_size = 2

[*.{tf,tfvars,hcl}]
indent_size = 2

[*.js]
indent_size = 2

[*.json]
indent_size = 2

[*.md]
indent_size = 2
trim_trailing_whitespace = false
